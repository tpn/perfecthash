{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-multi",
      "displayName": "Ninja Multi-Config",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ninja-multi-cuda",
      "displayName": "Ninja Multi-Config (CUDA)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build-cuda",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "USE_CUDA": "ON"
      }
    },
    {
      "name": "ninja-multi-macos-x86_64",
      "displayName": "Ninja Multi-Config (macOS x86_64)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build-macos-x86_64",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-multi",
      "configuration": "Debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-multi",
      "configuration": "Release"
    },
    {
      "name": "ninja-macos-x86_64-debug",
      "configurePreset": "ninja-multi-macos-x86_64",
      "configuration": "Debug"
    },
    {
      "name": "ninja-macos-x86_64-release",
      "configurePreset": "ninja-multi-macos-x86_64",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ctest-fast-debug",
      "displayName": "CTest Fast (Debug)",
      "configurePreset": "ninja-multi",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "label": "fast"
        }
      }
    },
    {
      "name": "ctest-fast-release",
      "displayName": "CTest Fast (Release)",
      "configurePreset": "ninja-multi",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "label": "fast"
        }
      }
    }
  ]
}
